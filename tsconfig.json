{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
